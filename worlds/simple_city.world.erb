  # Actors
  mesh_path = "model://actor/meshes/"

  skins =
  [
    "SKIN_man_blue_shirt.dae",
    "SKIN_man_green_shirt.dae",
    "SKIN_man_red_shirt.dae"
  ]

  animations =
  [
    "ANIMATION_running.dae",
    "ANIMATION_talking_a.dae",
    "ANIMATION_talking_b.dae",
    "ANIMATION_walking.dae"
  ]

  # From a rectangle (min, max)
  def trajectory(traj, speed)
    minX = traj[:minX]
    minY = traj[:minY]
    maxX = traj[:maxX]
    maxY = traj[:maxY]

    margin = 5
    turn = 10

    # Time
    edgeX_length = maxX - minX - margin*2.0 - turn*2.0
    edgeX_time = (edgeX_length) / speed

    edgeY_length = maxY - minY - margin*2.0 - turn*2.0
    edgeY_time = (edgeY_length) / speed

    turn_time = (turn*2.0) / speed

    # Orientation
    plusX = 0
    minusX = Math::PI
    plusY = Math::PI*0.5
    minusY = -Math::PI*0.5

    trajectory = Hash.new

    time = 0.0
    trajectory[:pose1] = {:x => minX + margin,        :y => minY + margin + turn, :yaw => plusY, :time => time}

    time = time + edgeY_time
    trajectory[:pose2] = {:x => minX + margin,        :y => maxY - margin - turn, :yaw => plusY, :time => time}

    time = time + turn_time
    trajectory[:pose3] = {:x => minX + margin + turn, :y => maxY - margin,        :yaw => plusX, :time => time}

    time = time + edgeX_time
    trajectory[:pose4] = {:x => maxX - margin - turn, :y => maxY - margin,        :yaw => plusX, :time => time}

    time = time + turn_time
    trajectory[:pose5] = {:x => maxX - margin,        :y => maxY - margin - turn, :yaw => minusY, :time => time}

    time = time + edgeY_time
    trajectory[:pose6] = {:x => maxX - margin,        :y => minY + margin + turn, :yaw => minusY, :time => time}

    time = time + turn_time
    trajectory[:pose7] = {:x => maxX - margin - turn, :y => minY + margin,        :yaw => minusX, :time => time}

    time = time + edgeX_time
    trajectory[:pose8] = {:x => minX + margin + turn, :y => minY + margin,        :yaw => minusX, :time => time}

    time = time + turn_time
    trajectory[:pose9] = {:x => minX + margin,        :y => minY + margin + turn, :yaw => plusY, :time => time}

    return trajectory
  end

  # Blocks

  block_size = 100

  block_1 = {:minX => 0, :maxX => block_size, :minY => -block_size, :maxY => 0}
  block_2 = {:minX => 0, :maxX => block_size, :minY => 0,           :maxY => block_size}


  # Actors

  actors =
  {
    "walking" => {:skin => skins[1], :anim => animations[3], :traj => trajectory(block_1, 2)},
    "running" => {:skin => skins[2], :anim => animations[0], :traj => trajectory(block_2, 4)},
  }

